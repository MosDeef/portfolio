<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2> Projects</h2>
        <div class="cards">
          <% data.projects.each do |project| %>
           <div class="card-product">
            <%= image_tag project.image, alt: "project image", class: "card-image" %>
              <div class="card-overlay">
                <h2><%= project.name %></h2>
                <p><%= project.description %></p>
                <div class="overlay-links">
                  <% if project.url.present? %>
                    <%= link_to "Live Demo", project.url, class: "project-link", target: "_blank" %>
                  <% end %>
                  <% if project.github.present? %>
                    <%= link_to "GitHub", project.github, class: "project-link", target: "_blank" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
